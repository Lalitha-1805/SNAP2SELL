# AgriSmart Environment Variables Configuration

# ============================================================
# FLASK CONFIGURATION
# ============================================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production-12345

# ============================================================
# MONGODB CONFIGURATION
# ============================================================
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/agrismart

# For MongoDB Atlas (Cloud):
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/agrismart?retryWrites=true&w=majority
MONGODB_DB_NAME=agrismart

# ============================================================
# JWT CONFIGURATION
# ============================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================================
# LLM & RAG CONFIGURATION
# ============================================================
# OpenAI API Key (for future LLM integration)
OPENAI_API_KEY=sk-your-openai-api-key

# HuggingFace Token (for model access)
HF_TOKEN=hf_your-huggingface-token

# ============================================================
# SERVER CONFIGURATION
# ============================================================
SERVER_PORT=5000
SERVER_HOST=0.0.0.0

# ============================================================
# EMAIL CONFIGURATION (for notifications)
# ============================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_USE_TLS=True

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================
VITE_API_URL=http://localhost:5000/api

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=logs/agrismart.log

# ============================================================
# DATABASE BACKUP
# ============================================================
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # 24 hours in seconds
